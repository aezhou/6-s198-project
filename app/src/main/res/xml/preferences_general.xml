<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="phone_number"
        android:title="@string/pref_title_phone"
        android:defaultValue="@string/pref_default_display_phone"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        />

    <EditTextPreference
        android:key="home_address"
        android:title="@string/pref_title_address"
        android:defaultValue="@string/pref_default_display_address"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="true"
        android:capitalize="words"
        android:singleLine="false"
        android:maxLines="3"
        />
</PreferenceScreen>